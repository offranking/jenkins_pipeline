pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                checkout scmGit(
                    branches: [[name: '*/main']],
                    userRemoteConfigs: [[url: 'https://github.com/offranking/jenkins_pipeline.git']]
                )
            }
        }

        stage('Build Docker Image') {
            steps {
                sh '''
                    ls -la  # List files to confirm Dockerfile and index.html
                    docker build -t my-nginx:latest .
                '''
            }
        }

        stage('Run Docker Container') {
            steps {
                sh '''
                    docker stop my-nginx-container || true
                    docker rm my-nginx-container || true
                    docker run --name my-nginx-container -d -p 80:80 my-nginx:latest
                    sleep 5
                    docker ps --filter "name=my-nginx-container"
                    docker logs my-nginx-container
                '''
            }
        }
    }
}
